{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "noEmit": false,
    },
    "include": [
        "*.ts",
        "*.spec.ts",
        "**/*.controller.ts",
        "**/*.service.ts",
        "**/*.route.ts",
        "**/*.model.ts",
        "**/*.ts",
        "**/*.spec.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}