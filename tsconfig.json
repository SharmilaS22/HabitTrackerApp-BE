{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "outDir": "./app",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "noEmit": false,
    },
    "include": [
        "*.ts",
        "*.spec.ts",
        "*.controller.ts",
        "*.service.ts",
        "*.route.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}